<!DOCTYPE html>
<html>
  <head>
    <title>FlatironProject1</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="header">
      <div class="center">
        <p><a href="/">Home</a>
            <% if logged_in? %>
              <%= link_to "Profile", "/users/#{@current_user.id}/flights" %>
              <%= link_to "Log out", logout_path, method: "delete" %>
              <a href="/new_trip">Book A Trip</a>
              <p><i><%= "#{@current_user.name} is logged into WanderList" %></i></p>
            <% else %>
              <a href="/users/new">Sign Up</a>
              <a href="/login">Sign In</a>
            <% end %> 
        </p>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
