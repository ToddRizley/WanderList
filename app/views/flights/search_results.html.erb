<div class = "center">
      <%= form_tag({controller:"itineraries", action: "create"}, method: "post") do %>
          <% @roundtripflight.each_with_index do |flight_package, index| %>
          <h1> <%= "Package #{index+1}" %>  </h1>
            <% featuredimage= Unsplash::Photo.search(flight_package[0].arrival_city.name, page = 1, per_page = 1) %>
            <img src= <%= featuredimage[0].urls["small"] + "/download" %> > 
            <p>Destination: <%= flight_package[0].arrival_city.name %> </p>
            <p> Date: <%= flight_package[0].arrival_date %> </p>
            <p> Flight Number: <%= flight_package[0].flight_number %> </p>
            <% total = flight_package[0].price.to_i + flight_package[1].price.to_i %>
            <p> Price : <%= "$ #{total}" %></p>
           <input id="departing_id" name="departing_id" value= <%= "#{flight_package[0].id}" %> type="hidden" />
           <input id="return_id" name="return_id" value= <%= "#{flight_package[1].id}" %> type="hidden" />
          <%= submit_tag ("Save flight")%>
          <%end%>
          <br>
          <br> 
      <% end %>
      </div> 



