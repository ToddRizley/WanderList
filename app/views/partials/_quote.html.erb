<%= form_tag({controller:"itineraries", action: "create"}, method: "post") do %>
    Destination: <%= quote["InboundLeg"]["OriginCity"]%>, <%= quote["OutboundLeg"]["DestinationCountry"] %> <br>
    <%= hidden_field_tag 'quote[destination]', quote["InboundLeg"]["OriginCity"] %>
    <%= hidden_field_tag 'quote[destination_country]', quote["OutboundLeg"]["DestinationCountry"] %>

    Departure Date: <%= quote["OutboundLeg"]["DepartureDate"].to_date%> <br>
    <%= hidden_field_tag "quote[departure_date]", quote["OutboundLeg"]["DepartureDate"] %>

    <% if quote["OutboundLeg"]["Carriers"][0] %>
        Departure Flight Carrier: <%= quote["OutboundLeg"]["Carriers"][0] %> <br>
        <%= hidden_field_tag "quote[outbound_carrier]", quote["OutboundLeg"]["Carriers"][0] %>
    <% end %>

    Return Date: <%= quote["InboundLeg"]["DepartureDate"].to_date%><br>
    <%= hidden_field_tag "quote[return_date]", quote["InboundLeg"]["DepartureDate"] %>

    <% if quote["InboundLeg"]["Carriers"][0] %>
        Return Flight Carrier: <%= quote["InboundLeg"]["Carriers"][0] %><br>
        <%= hidden_field_tag "quote[return_carrier]", quote["InboundLeg"]["Carriers"][0] %>
    <% end %>

    Price: $<%=  quote["MinPrice"]%>
    <%= hidden_field_tag "quote[price]", quote["MinPrice"] %>

    <%= submit_tag("Save flight", class: 'btn btn-primary center-block')%>
<% end %>
