<% provide(:title, "Sign up form") %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %><br>
      <%= f.label :password %>
      <%= f.password_field :password %><br>
      <%= f.submit 'Create User', class: 'btn btn-primary center-block' %>
      <% if flash[:message] %>
        <ul>
          <% flash[:message].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>
