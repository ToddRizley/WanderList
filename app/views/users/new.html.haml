= provide(:title, "Sign up form") 
  %h1 Sign up
  %row
    %col-md-6 col-md-offset-3
    = form_for @user do |f| 
      = f.label :name 
      = f.text_field :name 
      = f.label :password 
      = f.password_field :password 
      = f.submit 'Create User' 
    - if flash[:message] 
      %ul
      = flash[:message].each do |error| 
        %li = error 
        =yield 





