<%= form_tag("/find_flights", method: "get") do %>
<div class='center'>
  <h1>Your adventure awaits...</h1>
  <% if flash[:notice] %>
    <div class="notice"><h2 style="color:yellow"><strong><%= flash[:notice] %></h2></strong></div>
  <% end %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      
      <p> What's your budget? </p>
      <p><%= text_field_tag 'query[budget]' %></p>

      <p> Where are you flying from? </p>
      <p><%= text_field_tag 'query[city]'  %></p>

      <p> What's your departure date? </p>
      <p><input type="text" data-provide='datepicker' name='query[outbound_date]' ></p>

      <p> What's your return date? </p>
      <p><input type="text" data-provide='datepicker' name='query[inbound_date]' ></p>

      <%= submit_tag("Find Flights", class: 'btn btn-primary center-block') %>
      <% end %>
    </div>
  </div>
</div>
